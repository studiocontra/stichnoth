<div
  class="custom-block bg-image-text"
  style="background-color: {{ section.settings.color_scheme.settings.background }};"
>
  <div class="container">
    <div class="row justify-between align-bottom{% if section.settings.text_position == 'left' %} direction-md-reverse{% endif %}">
      {% if section.settings.image %}
        <div class="col-12">
          {%- if section.settings.heading != blank -%}
            <div class="bg-image-text__headline">
              <h3
                class="title title--hero title--hero-light"
                style="color: {{ section.settings.color_scheme.settings.headline }};"
              >
                {{ section.settings.heading }}
              </h3>
            </div>
          {%- endif -%}
        </div>
        <div class="col-md-6 col-lg-4">
          <div class="bg-image-text__content">
            {%- if section.settings.text != blank -%}
              <div class="text" style="color: {{ section.settings.color_scheme.settings.text }};">
                {{ section.settings.text }}
              </div>
            {%- endif -%}
          </div>
        </div>
        <div class="col-md-6 col-lg-8">
          <div class="bg-image-text__img">
            <picture>
              <source srcset="{{ section.settings.image | image_url: width: 650 }}" media="(min-width: 450px)">
              <source srcset="{{ section.settings.image | image_url: width: 450 }}">
              <img
                src="{{ section.settings.image | image_url }}"
                width="{{ section.settings.image.width }}"
                height="{{ section.settings.image.height }}"
                lazy="true"
              >
            </picture>
          </div>
        </div>
      {% else %}
        <div class="col-md-6">
          {%- if section.settings.heading != blank -%}
            <div class="bg-image-text__headline">
              <h3
                class="title title--hero title--hero-light"
                style="color: {{ section.settings.color_scheme.settings.headline }};"
              >
                {{ section.settings.heading }}
              </h3>
            </div>
          {%- endif -%}
        </div>
        <div class="col-md-6">
          <div class="bg-image-text__content bg-image-text__content--padding">
            {%- if section.settings.text != blank -%}
              <div class="text" style="color: {{ section.settings.color_scheme.settings.text }};">
                {{ section.settings.text }}
              </div>
            {%- endif -%}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Background image and text",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Image with text",
      "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
      "label": "t:sections.image-with-text.blocks.text.settings.text.label"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
      "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    }
  ],
  "presets": [
    {
      "name": "Background image and text"
    }
  ]
}
{% endschema %}

<div
  class="custom-block carousel-images-text"
  style="background-color: {{ section.settings.color_scheme.settings.background }};"
>
  <div class="container">
    <div class="carousel-images-text__content {% if section.settings.img_style == 'space' %}carousel-images-text__content--space-between{% endif %}">
      {%- if section.settings.headline != blank -%}
        <div class="carousel-images-text__content-title">
          <h2
            class="title title--hero title--hero-light"
            style="color: {{ section.settings.color_scheme.settings.headline }};"
          >
            {{ section.settings.headline }}
          </h2>
        </div>
      {%- endif -%}

      {%- if section.blocks -%}
        <div class="swiper carousel-images-text-slider js-carousel-images-text-slider">
          <div class="swiper-wrapper">
            {%- for block in section.blocks -%}
              <div class="swiper-slide">
                <div class="carousel-images-with-text__images">
                  <picture>
                    <source srcset="{{ block.settings.main_image | image_url: width: 750 }}" media="(min-width: 600px)">
                    <source srcset="{{ block.settings.main_image | image_url: width: 450 }}">
                    <img
                      src="{{ block.settings.main_image | image_url }}"
                      class="tit-main"
                      width="{{ block.settings.main_image.width }}"
                      height="{{ block.settings.main_image.height }}"
                    >
                  </picture>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      {%- endif -%}

      <div class="carousel-images-text__content-text">
        {%- if section.settings.text != blank -%}
          <div class="text" style="color: {{ section.settings.color_scheme.settings.text }};">
            {{ section.settings.text }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Carousel Images with text",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "headline",
      "default": "Image with text",
      "label": "Headline"
    },
    {
      "type": "richtext",
      "id": "text",
      "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
      "label": "t:sections.image-with-text.blocks.text.settings.text.label"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Additional Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Additional Image 2"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "select",
      "id": "img_style",
      "label": "Images Style",
      "options": [
        {
          "value": "overlap",
          "label": "Overlapping"
        },
        {
          "value": "space",
          "label": "Space"
        }
      ],
      "default": "overlap"
    }
  ],
  "presets": [
    {
      "name": "Carousel Images with text"
    }
  ]
}
{% endschema %}

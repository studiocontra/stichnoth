<div class="custom-block image-accordion">
  <div class="container">
    <div class="row align-center {% if section.settings.text_position == 'left' %} direction-md-reverse{% endif %}">
      <div class="col-md-5">
        <div class="image-accordion__img">
          {%- for block in section.blocks -%}
            {%- if block.settings.image -%}
              <picture>
                <source srcset="{{ block.settings.image | image_url: width: 650 }}" media="(min-width: 450px)">
                <source srcset="{{ block.settings.image | image_url: width: 450 }}">
                <img
                  v-if="activeItem === {{ forloop.index0 }}"
                  src="{{ block.settings.image | image_url }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  lazy="true"
                >
              </picture>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
      <div class="col-md-7">
        <div class="image-accordion__content {{ section.settings.text_position }}">
          {%- for block in section.blocks -%}
            <div
              class="accordion-item"
              :class="{'closed': activeItem !== {{ forloop.index0 }}}"
              data-idx="{{ forloop.index0 }}"
            >
              {%- if forloop.last -%}
                <input type="hidden" ref="total-input" value="{{forloop.index0}}">
              {%- endif -%}
              <div
                class="accordion-item__headline"
                @click="openItem({{ forloop.index0 }}); resetInterval();"
              >
                <div class="icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 -1 24 24">
                    <path fill="currentColor" d="m2 8.654l2.813 2.822l6.332-6.35l-2.814-2.823l-6.332 6.35zm4.441 8.128l2.11-2.117a.993.993 0 0 1 1.408 0a1 1 0 0 1 0 1.411l-2.11 2.117a1 1 0 0 1 0 1.411L6.44 21.015a.993.993 0 0 1-1.407 0l-1.407-1.41a1 1 0 0 1 0-1.412l1.407-1.411a.993.993 0 0 1 1.407 0zm9.146-6.35l6.331-6.35l-1.407-1.412l-6.331 6.35c-.777-.78-.912-1.907-.302-2.52L19.406.956c.61-.612 1.735-.477 2.512.303l1.407 1.41c.778.78.913 1.909.302 2.52l-5.528 5.545c-.61.612-1.735.477-2.512-.303zm-.924 3.866L9.738 9.36l-.704.706l4.925 4.939l.704-.706zm1.407 1.412l-.704.705l1.759 1.764c.194.195.51.195.703 0a.5.5 0 0 0 0-.705L16.07 15.71zM2.06 5.77a1.5 1.5 0 0 1 .291-1.704l1.407-1.41a1.49 1.49 0 0 1 1.699-.293L6.924.892a1.986 1.986 0 0 1 2.814 0l2.814 2.823a2 2 0 0 1 0 2.822l-1.407 1.411l8.09 8.114a2.5 2.5 0 0 1 0 3.528a2.482 2.482 0 0 1-3.517 0l-8.09-8.114l-1.408 1.411c-.777.78-2.037.78-2.814 0L.592 10.065a2 2 0 0 1 0-2.823l1.467-1.47z"/>
                  </svg>
                </div>

                {%- if block.settings.heading != blank -%}
                  <h3 class="title title--small">
                    {{ block.settings.heading }}
                  </h3>
                {%- endif -%}
              </div>

              <div class="accordion-item__content">
                <div class="accordion-item__loader">
                  <div class="progress-bar" :style="styleObject"></div>
                </div>
                {%- if block.settings.text != blank -%}
                  <div class="text">
                    {{ block.settings.text }}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image with Accordion",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    }
  ],
  "blocks": [
    {
      "type": "item",
      "name": "Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Item headline",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.image-with-text.settings.image.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Accordion"
    }
  ]
}
{% endschema %}

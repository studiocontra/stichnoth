<div
  class="custom-block image-text{% if section.settings.img_style == 'space' %} image-text--space{% endif %}"
  style="background-color: {{ section.settings.color_scheme.settings.background }};"
>
  <div class="container">
    <div class="row justify-between {{ section.settings.v_align }}{% if section.settings.text_position == 'left' %} direction-md-reverse{% endif %}">
      <div class="{% if section.settings.img_style == 'space' %}col-md-7{% else %}col-md-6{% endif %}">
        <div class="image-text__img">
          {% if section.settings.video != blank %}
            <div class="wrap-video">
              <div class="video">
                <iframe
                  src="https://player.vimeo.com/video/{{ section.settings.video }}?loop=1&autoplay=1&autopause=0&muted=1&title=0&byline=0&portrait=0&controls=1"
                  muted
                  frameborder="0"
                  allow="autoplay; fullscreen; picture-in-picture"
                  allowfullscreen
                ></iframe>
              </div>
            </div>
          {% else %}
            <picture>
              <source srcset="{{ section.settings.image | image_url: width: 650 }}" media="(min-width: 450px)">
              <source srcset="{{ section.settings.image | image_url: width: 450 }}">
              <img
                src="{{ section.settings.image | image_url }}"
                width="{{ section.settings.image.width }}"
                height="{{ section.settings.image.height }}"
                lazy="true"
              >
            </picture>
          {% endif %}

          {% if section.settings.img_style == 'overlap' %}
            {% if section.settings.video_2 != blank %}
              <iframe
                src="https://player.vimeo.com/video/{{ section.settings.video_2 }}?loop=1&autoplay=1&autopause=0&muted=1&title=0&byline=0&portrait=0&controls=1"
                muted
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                allowfullscreen
              ></iframe>
            {% else %}
              <img
                class="img--small{% if section.settings.text_position == 'left' %} img--small--bottom{% endif %}"
                src="{{ section.settings.image_2 | image_url: width: 300 }}"
                width="{{ section.settings.image_2.width }}"
                height="{{ section.settings.image_2.height }}"
                lazy="true"
              >
            {% endif %}
          {% endif %}
        </div>
      </div>
      <div class="col-md-5">
        <div class="image-text__content {{ section.settings.text_position }}">
          {% if section.settings.img_style == 'space' %}
            {% if section.settings.video_2 != blank %}
              <iframe
                src="https://player.vimeo.com/video/{{ section.settings.video_2 }}?loop=1&autoplay=1&autopause=0&muted=1&title=0&byline=0&portrait=0&controls=1"
                muted
                frameborder="0"
                allow="autoplay; fullscreen; picture-in-picture"
                allowfullscreen
              ></iframe>
            {% else %}
              <img
                class="img--small"
                src="{{ section.settings.image_2 | image_url: width: 300 }}"
                width="{{ section.settings.image_2.width }}"
                height="{{ section.settings.image_2.height }}"
                lazy="true"
              >
            {% endif %}
          {% endif %}
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                <h3
                  class="title{% if block.settings.heading_size == 'display' %} title--hero title--hero-light{% endif %}"
                  style="color: {{ section.settings.color_scheme.settings.headline }};"
                >
                  {{ block.settings.heading }}
                </h3>
              {%- when 'text' -%}
                <div class="text" style="color: {{ section.settings.color_scheme.settings.text }};">
                  {{ block.settings.text }}
                </div>
              {%- when 'button' -%}
                <a
                  href="{{ block.settings.button_link }}"
                  class="link"
                  style="color: {{ section.settings.color_scheme.settings.button }}"
                >
                  {{ block.settings.button_label }}

                  <svg width="16" height="16" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path style="color: {{ section.settings.color_scheme.settings.button }}" d="M1.182 7.99996L14.8184 7.99996M14.8184 7.99996L8.2729 14.5454M14.8184 7.99996L8.2729 1.4545" stroke="black" stroke-width="1.6" stroke-linecap="square"/>
                  </svg>
                </a>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "select",
      "id": "main_media_ratio",
      "label": "Main Media Aspect Ratio",
      "options": [
        {
          "value": "square",
          "label": "1:1 (850 x 850)"
        },
        {
          "value": "landscape",
          "label": "16:9 (850 x 480)"
        },
        {
          "value": "vertical",
          "label": "2:1 (850 x 1700)"
        }
      ],
      "default": "square"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "select",
      "id": "addon_media_ratio",
      "label": "Additional Media Aspect Ratio",
      "options": [
        {
          "value": "square",
          "label": "1:1 (250 x 250)"
        },
        {
          "value": "landscape",
          "label": "16:9 (250 x 140)"
        },
        {
          "value": "vertical",
          "label": "2:1 (250 x 500)"
        }
      ],
      "default": "square"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Additional Image"
    },
    {
      "type": "header",
      "content": "Videos"
    },
    {
      "type": "text",
      "id": "video",
      "label": "Main Video"
    },
    {
      "type": "text",
      "id": "video_2",
      "label": "Additional Video"
    },
    {
      "type": "select",
      "id": "img_style",
      "label": "Images Style",
      "options": [
        {
          "value": "overlap",
          "label": "Overlapping"
        },
        {
          "value": "space",
          "label": "Space"
        }
      ],
      "default": "overlap"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "select",
      "id": "v_align",
      "label": "Vertical Align",
      "options": [
        {
          "value": "align-bottom",
          "label": "Bottom"
        },
        {
          "value": "align-center",
          "label": "Center"
        }
      ],
      "default": "align-center"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image with text",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "t:sections.all.heading_size.label",
          "options": [
            {
              "value": "headline",
              "label": "Headline"
            },
            {
              "value": "display",
              "label": "Hero"
            }
          ],
          "default": "headline"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-with-text.presets.name"
    }
  ]
}
{% endschema %}

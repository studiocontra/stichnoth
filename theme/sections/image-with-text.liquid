<div class="custom-block image-text{% if section.settings.img_style == 'space' %} image-text--space{% endif %}">
  <div class="container">
    <div class="row justify-between {{ section.settings.v_align }}{% if section.settings.text_position == 'left' %} direction-md-reverse{% endif %}">
      <div class="{% if section.settings.img_style == 'space' %}col-md-7{% else %}col-md-6{% endif %}">
        <div class="image-text__img">
          <picture>
            <source srcset="{{ section.settings.image | image_url: width: 650 }}" media="(min-width: 450px)">
            <source srcset="{{ section.settings.image | image_url: width: 450 }}">
            <img
              src="{{ section.settings.image | image_url }}"
              width="{{ section.settings.image.width }}"
              height="{{ section.settings.image.height }}"
              lazy="true"
            >
          </picture>

          {% if section.settings.img_style == 'overlap' %}
            <img
              class="img--small{% if section.settings.text_position == 'left' %} img--small--bottom{% endif %}"
              src="{{ section.settings.image_2 | image_url: width: 300 }}"
              width="{{ section.settings.image_2.width }}"
              height="{{ section.settings.image_2.height }}"
              lazy="true"
            >
          {% endif %}
        </div>
      </div>
      <div class="col-md-5">
        <div class="image-text__content {{ section.settings.text_position }}">
          {% if section.settings.img_style == 'space' %}
            <img
              class="img--small"
              src="{{ section.settings.image_2 | image_url: width: 300 }}"
              width="{{ section.settings.image_2.width }}"
              height="{{ section.settings.image_2.height }}"
              lazy="true"
            >
          {% endif %}
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'heading' -%}
                <h3 class="title{% if block.settings.heading_size == 'display' %} title--hero title--hero-light{% endif %}">
                  {{ block.settings.heading }}
                </h3>
              {%- when 'text' -%}
                <div class="text">
                  {{ block.settings.text }}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.image-with-text.name",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image-with-text.settings.image.label"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Additional Image"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "select",
      "id": "img_style",
      "label": "Images Style",
      "options": [
        {
          "value": "overlap",
          "label": "Overlapping"
        },
        {
          "value": "space",
          "label": "Space"
        }
      ],
      "default": "overlap"
    },
    {
      "type": "select",
      "id": "text_position",
      "label": "Text Position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "right"
    },
    {
      "type": "select",
      "id": "v_align",
      "label": "Vertical Align",
      "options": [
        {
          "value": "align-bottom",
          "label": "Bottom"
        },
        {
          "value": "align-center",
          "label": "Center"
        }
      ],
      "default": "align-center"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image with text",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "select",
          "id": "heading_size",
          "label": "t:sections.all.heading_size.label",
          "options": [
            {
              "value": "headline",
              "label": "Headline"
            },
            {
              "value": "display",
              "label": "Hero"
            }
          ],
          "default": "headline"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.text.name",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>",
          "label": "t:sections.image-with-text.blocks.text.settings.text.label"
        }
      ]
    },
    {
      "type": "button",
      "name": "t:sections.image-with-text.blocks.button.name",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "t:sections.image-with-text.blocks.button.settings.button_label.label",
          "info": "t:sections.image-with-text.blocks.button.settings.button_label.info"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "t:sections.image-with-text.blocks.button.settings.button_link.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.image-with-text.presets.name"
    }
  ]
}
{% endschema %}

// Variables
$black = #000000
$black2 = #1a1c1f
$white = #ffffff
$white2 = #f5f5f5
$gold = #957153
$gray = #5c676b
$gray2 = #b0b5b9
$gray3 = #dee3e6

// Mixins
mq($size)
  @media (min-width unit($size, px))
    {block}

font($style = 'body', $weight = 400)
  if $style is 'body'
    font-family 'monument', sans-serif
  else if $style is 'headline'
    font-family 'monument_extended', sans-serif
    text-transform uppercase
  else
    font-family 'humane', sans-serif
    text-transform uppercase

  font-weight $weight

transition($prop, $duration = .3s)
  transition $prop $duration ease-in

fullAbs()
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  height 100%

centerAbs()
  position absolute
  top 50%
  left 50%
  z-index 1
  transform translate(-50%, -50%)

fit($val = cover, $pos = center)
  @supports(object-fit cover)
    height 100%
    object-fit $val
    object-position $pos
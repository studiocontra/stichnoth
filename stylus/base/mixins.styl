// Variables
$black = #101010
$white = #fff
$yellow = #ffd100
$blue = #e5eff8

// Mixins
mq($size)
  @media (min-width unit($size, px))
    {block}

font($weight = 400)
  font-family 'gotham', sans-serif
  font-weight $weight

transition($prop, $duration = .3s)
  transition $prop $duration ease-in

fullAbs()
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  width 100%
  height 100%

centerAbs()
  position absolute
  top 50%
  left 50%
  z-index 1
  transform translate(-50%, -50%)

fit($val = cover, $pos = center)
  @supports(object-fit cover)
    height 100%

    object-fit $val
    object-position $pos
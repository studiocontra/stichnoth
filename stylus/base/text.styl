// Base Paragraph
.text
  margin-bottom 2em
  font-size 18px
  line-height 1.3
  font()
  p
    margin-bottom 1em


.text--big
  font-size 18px

  +mq(768)
    font-size 22px


.text--small
  font-size 15px


.text--500
  font-weight 500


// Headlines
.title
  margin-bottom 0.5em
  font-size 26px
  line-height 1.25
  font()

  +mq(768)
    font-size 36px
  +mq(992)
    font-size 48px


.title--xsmall
  font-size 18px
  font-weight 500
  line-height 1.05

  +mq(768)
    font-size 20px
  +mq(992)
    font-size 24px


.title--small
  font-size 24px
  font-weight 500
  line-height 1.05

  +mq(768)
    font-size 28px
  +mq(992)
    font-size 32px


.title--big
  font-size 54px
  line-height 1
  font-weight 300

  +mq(768)
    font-size 72px
  +mq(992)
    font-size 100px


.title--hero
  font-size 40px
  font-weight 700
  line-height 1

  +mq(768)
    font-size 60px
  +mq(992)
    font-size 80px


.title--deco
  display flex
  align-items flex-start

  &:before
    position relative
    display inline-block
    margin-right 5px
    color $yellow
    vertical-align middle
    font-size 1.5em
    line-height 1
    transform translateY(-3px)
    content '\2022'

  p
    display inline-block


// Other
.eyebrow
  display inline-block
  padding 5px 8px
  margin-bottom 36px
  color $black
  background-color $yellow
  text-transform uppercase
  font-weight 500
  font-size 12px
  line-height 1.3
  border-radius 2px

  +mq(768)
    font-size 14px


.eyebrow--small
  font-size 8px

  +mq(768)
    font-size 10px

.eyebrow--white
  background-color $white


.eyebrow--black
  background-color $black
  color $white

// Base Paragraph
.text
  margin-bottom 1.77em
  font-size 18px
  line-height 1.3
  font()
  p
    &:not(:last-child)
      margin-bottom 1em


.text--big
  font-size 18px

  +mq(768)
    font-size 22px


.text--small
  font-size 15px


.text--500
  font-weight 500


// Headlines
.title
  margin-bottom 0.5em
  font-size clamp(22px, 4vw, 40px)
  line-height 1.25
  font('headline', 700)

.title--big
  font-size clamp(32px, 5vw, 56px)


.title--medium
  font-size clamp(18px, 2.5vw, 32px)


.title--small
  font-size clamp(16px, 1.5vw, 24px)


.title--xsmall
  font-size clamp(14px, 1.2vw, 18px)


.title--footer
  font-size 12px

  +mq(768)
    font-size 14px


.title--hero
  font-size clamp(100px, 15vw, 260px)
  line-height 0.85
  margin-bottom 0
  letter-spacing 0.015em
  font('display', 600)

  +mq(1600)
    font-size clamp(100px, 20vw, 320px)

.title--hero--small
  font-size clamp(90px, 10vw, 175px)
  line-height 0.85
  margin-bottom 0
  letter-spacing 0.015em
  font('display', 600)


.title--hero-light
  font-weight 400


// German lang overrwites
[lang="de"]
  // Headlines
  .title
    font-size clamp(18px, 4vw, 32px)

  .title--big
    font-size clamp(28px, 5vw, 52px)


  .title--medium
    font-size clamp(16px, 2.5vw, 28px)


  .title--small
    font-size clamp(14px, 1.5vw, 20px)


  .title--xsmall
    font-size clamp(12px, 1vw, 14px)


  .title--hero
    font-size clamp(95px, 12vw, 220px)

    +mq(1600)
      font-size clamp(95px, 17vw, 280px)

  .title--hero--small
    font-size clamp(80px, 8.5vw, 150px)

  .title--footer
    font-size 12px

    +mq(768)
      font-size 14px

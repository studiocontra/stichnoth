.cta
  display inline-block
  background-color $yellow
  padding 12px
  border-radius 2px
  border 0

  span
    position relative
    display block
    color $black
    font-size 14px
    text-align center
    text-transform uppercase
    font(500)

    +mq(768)
      font-size 16px

.cta--small
  padding 8px
  font-size 12px

  +mq(768)
    font-size 14px

.cta--white
  background-color $white

.cta--outline
  background-color transparent
  border 1px solid $black
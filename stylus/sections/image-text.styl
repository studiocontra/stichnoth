.image-text__img
  position relative
  width 90%
  margin-bottom 3em

  +mq(768)
    width 86%
    margin-bottom 0

  img
    width 100%
    border-radius 8px

  .img--small
    position absolute
    top 10%
    right 0
    width 50%
    max-width 240px
    transform translateX(25%)

    +mq(768)
      width 30%

  .img--small--bottom
    top auto
    bottom 10%

  .wrap-video
    position relative
    aspect-ratio 1 / 1.625
    aspect-ratio 16 / 16
    container video-wrap / inline-size
    overflow hidden
    border-radius 8px

    .video
      position absolute
      top 50%
      left 50%
      width auto
      height 100%
      aspect-ratio 16 / 9
      transform translate(-50%, -50%)

      iframe
        fullAbs()


.image-text__content
  &.left
    +mq(992)
      padding-left 15%

  &.right
    +mq(992)
      padding-right 15%

  .title
    font-size clamp(22px, 3vw, 40px)
    clear both

  .title--hero
    font-size: clamp(120px,15vw,260px);

  .title--hero-light
    b,
    strong
      font-weight 600

  .text
    margin-bottom 1em
    color #6f6f6f


.image-text--space
  .image-text__img
    width 95%
    margin-bottom 0

  .image-text__content
    .img--small
      float right
      width 50%
      max-width 240px
      border-radius 8px
      margin-bottom -5%
      transform translateY(-50%)

      +mq(768)
        margin-bottom 15%
        transform translateY(0)
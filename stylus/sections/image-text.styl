.image-text
  .wrap-media
    position relative
    border-radius 8px
    overflow hidden

  .wrap-media--vertical
    aspect-ratio 1 / 1.25

  .wrap-media--square
    aspect-ratio 1 / 1

  .wrap-media--landscape
    aspect-ratio 16 / 9

  img
    width 100%
    fullAbs()
    fit()


.image-text__media
  position relative
  width 90%
  margin-bottom 3em

  +mq(768)
    width 86%
    margin-bottom 0


  .wrap-media--small
    position absolute
    top 10%
    right 0
    width 55%
    max-width 240px
    transform translateX(25%)

    +mq(768)
      left 70%
      right auto
      width 40%


  .wrap-media--bottom
    top auto
    bottom 10%


  .wrap-video
    position absolute
    top 50%
    left 50%
    width auto
    height 100%
    aspect-ratio 16 / 9
    transform translate(-50%, -50%)

    iframe
      fullAbs()


.image-text__content
  &.left
    +mq(992)
      padding-left 15%

  &.right
    +mq(992)
      padding-right 15%

  .title
    font-size clamp(22px, 3vw, 40px)
    clear both

  .title--hero
    font-size: clamp(120px,15vw,260px);

  .title--hero-light
    b,
    strong
      font-weight 600

  .text
    margin-bottom 1em
    color #6f6f6f


.image-text--space
  img
    fullAbs()

  .image-text__media
    width 95%
    margin-bottom 0

  .image-text__content
    .wrap-media--small
      float right
      width 50%
      max-width 240px
      border-radius 8px
      margin-bottom -5%
      transform translateY(-50%)

      +mq(768)
        margin-bottom 15%
        transform translateY(0)
.image-text__img
  width 90%
  margin-bottom 3em

  +mq(768)
    width 86%
    margin-bottom 0

  img
    border-radius 8px

  .img--small
    position absolute
    top 10%
    right 10px
    width 30%
    max-width 240px


.image-text__content
  +mq(992)
    padding-right 25%

  .img--small
    float right
    width 50%
    max-width 240px
    border-radius 8px

  .title
    clear both

  .text
    margin-bottom 1em
    color #6f6f6f


.image-text--space
  .image-text__img
    width 95%
    margin-bottom 0

  .image-text__content
    .img--small
      margin-bottom -17%
      transform translateY(-50%)

      +mq(768)
        margin-bottom 15%
        transform translateY(0)
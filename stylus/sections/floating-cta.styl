.wrap-floating-cta
  position fixed
  right 16px
  bottom 16px
  z-index 5

  +mq(768)
    right 32px
    bottom 32px

.floating-cta__trigger
  cursor pointer
  display flex
  align-items center

  &:hover
    .text
      transition-property background color
      transition-duration 0.3s
      transition-timing-function ease-in
      background-color $black !important
      color $white

    .icon
      transform scale(1.05) !important

  .text
    background-color $white
    padding 12px 16px
    margin-right 16px
    margin-bottom 0
    border-radius 32px
    font-size 13px
    text-transform uppercase
    font-weight 500

    span
      position absolute
      opacity 0

  .icon
    width 72px
    height @width
    border-radius 50%
    overflow hidden
    transition(transform)
    animation-name rotation
    animation-duration 2s
    animation-iteration-count infinite
    animation-direction alternate

    +mq(768)
      width 96px
      height @width

@keyframes rotation
  0%
    transform rotate(0deg)
  100%
    transform rotate(20deg)

.floating-cta__content
  position absolute
  bottom -3px
  right -3px
  background-color $white
  width 315px
  max-height 540px
  display flex
  flex-direction column
  padding 16px
  gap 16px
  border-radius 3px
  box-shadow 0 0 12px rgba($black, 0.3)

  .close
    position absolute
    top 10px
    right 10px
    width 20px
    cursor pointer
    fill $black

  .eyebrow
    display inline-block
    margin 0
    align-self flex-start

  .text
    max-height 9em
    overflow auto
    margin-bottom 0

    &::-webkit-scrollbar
      width 3px

    &::-webkit-scrollbar-track
      box-shadow inset 0 0 6px rgba(0, 0, 0, 0.1)

    &::-webkit-scrollbar-thumb
      background-color $black


/* we will explain what these classes do next! */
.slide-enter-active,
.slide-leave-active
  transition-property opacity, transform
  transition-duration 0.2s
  transition-timing-function ease-in


.slide-enter-from,
.slide-leave-to
  opacity 0
  transform translateY(20px)

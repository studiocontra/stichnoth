.wrap-form
  margin-bottom 20px

  .form-group
    display flex
    flex-direction column

    &:not(:last-child)
      margin-bottom 2em

    label
      margin-bottom 10px

    .select
      position relative
      background-color $gray3
      border-radius 8px
      min-height 48px

      select
        padding-right 50px
        background none
        appearance none
        fullAbs()

      svg
        width 20px
        position absolute
        right 10px
        top 50%;
        translate 0 -50%
        pointer-events none

    input,
    select,
    textarea
      min-height 48px
      border-radius 8px
      background-color $gray3
      padding 8px 16px
      border 0
      line-height 1.3
      font-family 'monument', sans-serif
      font-weight 500
      font-size 16px

      &:focus
        outline 1px solid $gray

      &.parsley-error
        outline 1px solid #880606
        background-color #fff4f4

    textarea
      min-height 150px
      resize none
      padding 16px

    .cta
      width 100%

      &:not(:last-child)
        margin-bottom 1.5em

  .form-group--checkbox
    flex-direction row
    align-items center

    input
      min-height 27px
      width 27px
      flex 0 0 27px
      margin 0
      margin-right 16px
      accent-color $black

    label
      margin-bottom 0

.wrap-form
  margin-bottom 20px

  .form-group
    display flex
    flex-direction column

    &:not(:last-child)
      margin-bottom 2em

    label
      margin-bottom 10px

    input, textarea
      min-height 48px
      border-radius 8px
      background-color $gray3
      padding 8px 16px
      border 0
      line-height 1.3
      font-family 'monument', sans-serif
      font-weight 500
      font-size 16px

      &:focus
        outline 1px solid $gray

      &.parsley-error
        outline 1px solid #880606
        background-color #fff4f4

    textarea
      min-height 150px
      resize none
      padding 16px

    .cta
      width 100%

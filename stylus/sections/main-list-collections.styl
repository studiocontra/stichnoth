.collection-list__grid
  padding 0 10px
  display flex
  flex-wrap wrap
  align-items flex-start
  justify-content space-between
  padding-bottom 5%

  +mq(768)
    align-items center

  .collection-list__card
    width 49%
    margin 0 -10px 3em

    +mq(768)
      width 25%
      margin-bottom 8em

    .card__img
      aspect-ratio 1 / 1.32


  .collection-list__card:nth-child(5n + 1),
  .collection-list__card:nth-child(5n + 2)
    width 85%

    +mq(768)
      width 41.666%

  .collection-list__card:nth-child(5n + 1)
    .card__img
      aspect-ratio 1 / 1.2

  .collection-list__card:nth-child(5n + 2)
    margin-left auto

    +mq(768)
      width 41.666%
      margin 0 auto 3em

    .card__img
      aspect-ratio 1.3 / 1

  .collection-list__card:nth-child(5n + 3)
    +mq(768)
      transform translateY(-10%)

  .collection-list__card:nth-child(5n + 4)
    margin-top 50%

    +mq(768)
      margin-top 0
      margin-right auto
      margin-left 8.33333%

  .collection-list__card:nth-child(5n + 5)
    margin-left 8.33333%

    +mq(768)
      margin-left 0
      transform translateY(-20%)
header
  padding 30px 0
  position relative
  top 0
  left 0
  width 100%
  z-index 5

  >.container
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap

.header__mobile-toggle
  display flex
  gap 0 12px
  width 120px

  +mq(768)
    display none

  .modal__toggle-open
    transform translateY(3px)

.header__hamburger
  position relative
  display block
  width 25px
  height @width
  border 0
  background none
  cursor pointer

  +mq(768)
    display none

  .header__hamburger__inner
    div,
    &::before,
    &::after
      position absolute
      left 0
      width 100%
      height 3px
      border-radius 3px
      background-color $black

    &::before,
    &::after
      display block
      content ''
      transition-duration 0.2s
      transition-property transform, top, bottom

    div
      top calc(50% - 2px)

    &::before
      top 3px

    &::after
      bottom 3px


.header__locale
  width 120px
  display none
  gap 0 4px
  align-items center

  +mq(768)
    display flex

  .bull
    font-size 10px

  .locale__link
    color $black
    text-transform uppercase
    font('headline')

  .locale__link--active
    font-weight 500

.header__locale--mobile
  +mq(768)
    display none



.header__logo
  .logo
    display none
    width 145px

    +mq(768)
      display block

  .logo--mobile
    display block
    width 25px

    +mq(768)
      display none


.header__icons
  display flex
  align-items center
  width 120px
  gap 0 16px


.header__search
  .modal__toggle-open
    width 20px
    height 20px

  summary
    &::marker
      content ''


.header__nav
  display none
  margin-top 36px
  margin-left auto
  flex 1 1 100%

  +mq(768)
    display block
    text-align center

  ul
    padding-left 0
    list-style none

  li
    display inline-block
    padding 0 12px
    margin 0 12px

  .menu__link
    color $black
    text-decoration none
    font('headline')

    &:hover
      font-weight 500

  .menu__link--active
    font-weight 500

  .header__locale
    display flex

    +mq(768)
      display none
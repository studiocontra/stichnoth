.product-list__headline
  margin-bottom 72px
  text-align center

.product-list__slider
  margin 0 auto
  padding 0 10px
  max-width 2000px

  +mq(1300)
    padding 0 22px

  .swiper-slide
    width @css{max(275px, calc(25% - 20px))}
    margin 0 10px

  .product-list__slider__arrows
    display flex
    justify-content flex-end

    .swiper-button
      cursor pointer

      &-disabled
        opacity 0.3

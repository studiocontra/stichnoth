.home-collection-list__headline
  margin-bottom 72px
  text-align center

  .title
    margin-bottom 0.2em


.home-collection-list__slider
  .swiper-wrapper
    padding-bottom 120px
    align-items stretch
    +mq(1400)
      padding-bottom 10%

  .swiper-slide
    margin 0 4%
    height auto

    +mq(768)
      margin 0 2.5%

    &:nth-child(odd)
      min-width 270px
      width 22% !important

    &:nth-child(even)
      width 80vw !important
      max-width 800px

      +mq(768)
        width 60vw !important
      +mq(992)
        width 50vw !important
      +mq(1200)
        width 40vw !important

    &:nth-child(3n + 1)
      .collection-list__card
        transform translateY(20%)

        .card__img
          aspect-ratio 1 / 1.5


    &:nth-child(3n + 2)
      .collection-list__card
        .card__img
          aspect-ratio 1.3 / 1


    &:nth-child(3n + 3)
      .collection-list__card
        transform translateY(50%)

        .card__img
          aspect-ratio 1 / 1


  .home-collection-list__slider__arrows
    display flex
    justify-content flex-end

    .swiper-button
      cursor pointer

      &-disabled
        opacity 0.3

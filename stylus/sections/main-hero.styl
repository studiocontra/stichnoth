.main-hero
  min-height calc(100lvh - 69px)
  padding 15vh 0
  margin-bottom 0
  display flex
  flex-direction column
  align-items center
  justify-content center
  position relative
  overflow hidden

  .container
    text-align center
    position relative


.main-hero__bg
  fullAbs()

  img
    display block
    fullAbs()
    fit()

  &::after
    content ''
    background-color $black
    opacity 0.5
    fullAbs()


.main-hero__content
  color $white
  max-width 850px
  margin 0 auto

  .title
    margin-bottom 40px

    strong
      display inline
      color $yellow

  .text
    margin-bottom 40px


.main-hero__ctas
  .cta
    margin 8px
    cursor pointer

    +mq(576)
      margin 0 8px

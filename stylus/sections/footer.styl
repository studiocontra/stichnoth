footer
  position relative
  padding 20px 0
  background-color $yellow
  width 100%
  z-index 5

  >.container
    display flex
    justify-content space-between
    align-items center
    flex-wrap wrap

.footer__logo
  display none

  +mq(768)
    display block
    flex 0 0 120px

  a
    display inline-block
    width 120px


.footer__nav
  flex 1 1 100%
  display block
  margin-left auto
  margin-right 25px
  text-align center

  +mq(768)
    flex 0 1 auto
    text-align right

  a
    color $black
    text-decoration none
    font-weight 500
    margin-left 22px

    &:hover
      text-decoration underline

.product-hero
  position relative
  background-color $black
  color $white

  &:after
    position absolute
    bottom -5px
    left 0
    width 100%
    height calc(120px + 15%)
    content ''
    background-color $white


.product-hero__content
  padding-bottom 32px


.product-hero__name
  .title
    +mq(768)
      margin-bottom 0


.product-hero__stock
  font-size 16px

  +mq(992)
    text-align right


.product-hero__img
  border-radius 3px
  overflow hidden
  position relative

  iframe
    position absolute
    top 0
    left 0
    width 100%
    height 100%


.product-hero__img--video
  position relative
  padding-bottom 56.25%

.single-faq-tab
  margin-right 15px
  cursor pointer
  font-weight 700
  transition(background, 0.2s)

  &:hover
    background-color $blue


.single-faq-group
  .single-question
    cursor pointer
    padding 15px 12px
    display flex
    align-items center
    transition(background)

    +mq(768)
      padding 30px 24px

    span
      flex 0 0 40px
      color $blue
      font-size 50px
      line-height 0

    .text
      flex 0 1 auto
      margin-bottom 0

    &.active
    &:hover
      background-color $blue

    &.active
      span
        color $black


  .single-answer
    display none
    padding 20px 16px
    background-color $yellow

    +mq(768)
      padding 40px 32px
      display block

    ul
      padding-left 40px
      margin-bottom 1em

    a
      font-weight 500
      color #003ec4

  .single-answer--mobile
    display block
    margin 16px 0

    +mq(768)
      display none
.wrap-contact-form
  padding 100px 0

.contact-form__headline
  margin-bottom 100px
  max-width 750px

.contact-form__form
  max-width 750px


.contact__fields
  display flex
  flex-wrap wrap
  gap 32px

  .field
    flex 1 1 100%

    +mq(768)
      flex 0 0 calc(50% - 16px)

    label
      display block
      margin-bottom 5px
      font-size 14px
      text-transform uppercase
      font-weight 500

    input
      width 100%
      height 47px
      border 1px solid rgba($black, 0.5)
      padding 7px 3px

      &:focus
        outline 1px solid $yellow

      &.parsley-error
        border-color tomato

    textarea
      width 100%
      resize none

      &:focus
        outline 1px solid $yellow

    .msg-is-invalid
      font-size 12px
      color tomato

  .field--full
    flex 1 1 100%

.contact__button
  padding-top 16px
  text-align right

  .cta
    padding 12px 24px
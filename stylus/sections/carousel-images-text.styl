.carousel-images-text
  color $white
  background-color $gold
  overflow hidden

.carousel-images-text__content-title
  text-align center

.carousel-images-text__content-text
  text-align center
  margin 0 auto
  width 90%
  max-width 530px

  +mq(1200)
    max-width 630px

  .text
    font-size 14px
    +mq(768)
      font-size 16px
    +mq(992)
      font-size 18px


.carousel-images-text-slider
  margin-bottom 10px
  width 100%

  .swiper-wrapper
    align-items center
    padding 50px 0 150px

  .swiper-slide
    position relative
    padding 0 5vw
    border-radius 8px
    transform translateY(90px) !important
    transition all .3s ease-in-out
    transition-delay 0.1s

    +mq(992)
      padding 0 50px

    .carousel-images-text__images
      position relative
      width 100%
      height 100%
      aspect-ratio 1/1.25

      img
        border-radius 8px
        width 100%
        height 100%
        centerAbs()
        fit()


  .swiper-slide-active
    transform translateY(0) !important
    transform-origin center

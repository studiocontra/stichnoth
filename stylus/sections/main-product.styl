.product-form
  display flex
  flex-wrap wrap

  .product__price
    margin-bottom 1em

    .price__label
      display block
      text-transform uppercase
      color $gray2
      letter-spacing 0.075em
      margin-bottom 6px

  .wrap-price
    display inline-block
    font-size 24px

  .price--sale
    display none

    .price-item--regular
      display block
      font-size 0.75em
      color $gray2

  .wrap-price--on-sale
    .price--regular
      display none

    .price--sale
      display block


  .product-form__add
    flex 1 1 100%

  .add-to-cart
    width 100%
    height 66px

    &:hover
      .spinner
        path
          stroke $gold

    span,
    svg
      pointer-events none

    .spinner
      width 30px

      path
        stroke $white


.product__accordion,
.product__accordion--faqs
  .accordion-item.closed
    .accordion-item__content
      max-height 0 !important


  .accordion-item__headline
    display flex
    align-items center
    margin-bottom 2em
    cursor pointer
    border-bottom 1px solid $gray3
    justify-content space-between

    .icon,
    .title,
    .text
      pointer-events none
      margin-bottom 0

    .icon
      margin-right 20px
      fill $black

      svg
        width 30px


  .accordion-item__content
    max-height 0
    overflow hidden
    transition max-height 0.3s ease-out

    .text
      color $gray

      a
        color $gold
        text-decoration underline


.product__accordion
  margin-bottom 4em

  +mq(768)
    margin-bottom 0

  .accordion-item.closed
    .accordion-item__headline
      color $gray2


.product__faqs__headline
  margin-bottom 2em

  +mq(768)
    margin-bottom 0


.product__accordion--faqs
  .product__accordion__headline
    margin-bottom 1em

  .accordion-item.closed
    .accordion-item__headline
      color $gray2

  .accordion-item__headline
    .text
      margin-bottom 1em

    .icon
      svg
        width 28px


.product__benefits
  >.title
    margin-bottom 1em

  .single-benefit
    display flex
    align-items center
    margin-bottom 16px

    .icon
      position relative
      width 50px
      height @width
      flex-shrink 0
      padding 5px
      border-radius 50%
      margin-right 10px
      background-color $white2

      img
        width 70%
        centerAbs()
.stores__headline
  margin-bottom 2em

  .title
    text-align center


.stores__nav
  position sticky
  top 0
  background-color $white
  display flex
  flex-wrap wrap
  justify-content center
  gap 0 32px
  z-index 5
  padding 32px 0 16px

  +mq(768)
    gap 0 64px
  +mq(992)
    gap 0 82px

  a
    color $gray
    font-size clamp(16px, 1.5vw, 24px)
    text-transform uppercase
    font('headline', 500)
    margin-bottom 16px

    &::after
      display block
      width 100%
      height 1px
      background-color $gold
      content ''
      opacity 0
      transition opacity 0.3s ease-in

    &.active
      color $gold

      &::after
        opacity 1


.stores__region
  padding 3em 0


.single-store
  margin-bottom 6em
  display flex
  flex-wrap wrap
  align-items center

  +mq(768)
    margin-bottom 4em

  .store__images,
  .store__text
    width 100%

    +mq(768)
      width 49%

  .store__images
    position relative
    margin-bottom 2em

    .main-img
      position relative
      width 86.666%
      aspect-ratio 1.2 / 1

    .addon-img
      position absolute
      right 0
      width 130px
      aspect-ratio 1 / 1.5


    img
      border-radius 8px
      fullAbs()
      fit()

  .store__text
    +mq(768)
      padding 0 8.3333%

    .title
      margin-bottom 0.7em
      font-size clamp(18px, 4vw, 40px)

    .text
      margin-bottom 1.5em

    p
      margin-bottom 0.5em


.single-store--img-left
  .store__text
    +mq(768)
      padding-right 0

  .store__images
    .addon-img
      top -10%

      +mq(768)
        top 10%


.single-store--img-right
  +mq(768)
    flex-direction row-reverse

  .store__text
    +mq(768)
      padding-left 0

  .store__images
    margin-bottom 4em

    +mq(768)
      margin-bottom 2em

    .addon-img
      bottom -10%

      +mq(768)
        bottom 10%


.single-store--full
  display flex

  .store__images,
  .store__text
    flex 1 1 100%

  .store__images
    .main-img
      width 100%
      aspect-ratio 1.5 / 1

      +mq(768)
        aspect-ratio 2.5 / 1

  .store__text
    padding 0
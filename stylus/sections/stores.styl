.stores
  margin-bottom 0
  padding-bottom 0


.stores__headline
  margin-bottom 2em

  .title
    text-align center


.stores__nav
  position sticky
  top 0
  background-color $white
  display flex
  flex-wrap wrap
  justify-content center
  gap 0 32px
  z-index 5
  padding 32px 0 16px

  +mq(768)
    gap 0 64px
  +mq(992)
    gap 0 82px

  a
    color $gray
    font-size clamp(16px, 1.5vw, 24px)
    text-transform uppercase
    font('headline', 500)
    margin-bottom 16px

    &::after
      display block
      width 100%
      height 1px
      background-color $gold
      content ''
      opacity 0
      transition opacity 0.3s ease-in

    &.active
      color $gold

      &::after
        opacity 1


.stores__region
  padding 3em 0

  .title
    margin-bottom 0


.single-store
  margin-bottom 6em
  display flex
  flex-wrap wrap
  align-items center

  .store__images,
  .store__text
    width 100%

    +mq(768)
      width 49%

  .store__images
    position relative
    margin-bottom 2em

    .main-img
      position relative
      width 86.666%
      border-radius 5px
      overflow hidden
      aspect-ratio 1.2 / 1

    .addon-img
      position absolute
      right 0
      width 130px
      border-radius 3px
      overflow hidden
      aspect-ratio 1 / 1.5


    img
      border-radius 8px
      fullAbs()
      fit()

  .store__text
    +mq(768)
      padding 0 8.3333%

    .title
      margin-bottom 0.7em
      font-size clamp(18px, 4vw, 40px)

    .text
      margin-bottom 1.5em

    p
      margin-bottom 0.5em


.single-store--img-left
  .store__text
    +mq(768)
      padding-right 0

  .store__images
    .addon-img
      top -10%

      +mq(768)
        top 10%


.single-store--img-right
  +mq(768)
    flex-direction row-reverse

  .store__text
    +mq(768)
      padding-left 0

  .store__images
    margin-bottom 4em

    +mq(768)
      margin-bottom 2em

    .addon-img
      bottom -10%

      +mq(768)
        bottom 10%


.single-store--full
  display flex

  .store__images,
  .store__text
    flex 1 1 100%

  .store__images
    .main-img
      width 100%
      aspect-ratio 1.5 / 1

      +mq(768)
        aspect-ratio 2.5 / 1

  .store__text
    padding 0


.single-store--disabled
  position relative

  .store__images
    z-index 1

    .main-img
      &:after
        display block
        background-color rgba($black, 0.2)
        content ''
        z-index 1
        backdrop-filter blur(5px)
        fullAbs()


    .title
      width 100%
      text-align center
      font-weight 400
      color $white
      centerAbs()
      z-index 2


  .store__text
    &:after
      display block
      background-color rgba($white, 0.6)
      content ''
      backdrop-filter blur(7.5px)
      fullAbs()


.wrap-modal-book
  .modal__close
    position relative
    display block
    margin-bottom 2em
    top 0
    right 0

    svg
      display block
      width 45px
      margin 0 auto

      path
        fill $gold


  .modal__body
    position relative
    width 100%
    background-color $white
    border-radius 8px
    aspect-ratio 1 / 1.5

    +mq(768)
      aspect-ratio 4 / 3

  iframe
    fullAbs()

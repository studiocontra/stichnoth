.facets-container
  display flex
  justify-content space-between
  align-items center
  margin-bottom 72px

.facets__wrapper
  display block
  text-align right

  &[open]
    .facets__close
      display block
    .facets
      pointer-events all
    .facets-form
      opacity 1


.facets__toggle
  text-align right

  &::marker
    content ''


.facets__open
  svg
    width 30px

.facets__close
  display none
  position fixed
  top 40px
  right 64px
  z-index 11

  svg
    width 25px


// filters container
.facets
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 10
  padding 20px 32px
  background-color rgba($black, 0.75)
  backdrop-filter blur(5px)

.facets-form
  background-color $white
  width calc(100% - 5rem)
  margin-left auto
  height 100%
  overflow-y auto
  pointer-events all
  transition opacity 0.2s ease
  max-width 400px
  display flex
  flex-direction column
  border-radius 8px
  padding 60px 32px 32px
  text-align left
  opacity 0

  .facets__group
    padding 20px 0

    &:not(:last-of-type)
      border-bottom 1px solid $gray3

    +mq(768)
      padding 32px 0

    .text
      color $gray
      margin-bottom 1em

      p
        margin-bottom 0


  .facets__list
    list-style none

    .facets__item
      label
        display flex
        align-items center

      input
        display none

        &:checked + .input
          .icon
            opacity 1

      .input
        position relative
        display inline-block
        margin-right 8px

        .icon
          position absolute
          top 8px
          left 3px
          opacity 0


  .facets__price
    display flex
    align-items center

    .field__currency
      display block
      color $gray
      font('body', 400)

    .field
      position relative
      margin-right 32px

    .field__input
      margin-left 5px
      width 100px
      height 47px
      padding 8px 5px 2px
      font('headline', 400)


    .field__label
      position absolute
      top 5px
      left 12px
      font-size 0.75em
      color $gray


  .facets__summary
    .facets__sort
      label
        display block
        margin-bottom 0.5em

    .select
      position relative
      display inline-flex
      height 47px
      padding 7px 12px
      border 1px solid $black
      align-items center
      width 100%
      border-radius 5px

      svg
        position absolute
        right 10px
        width 20px
        margin-left 10px
        pointer-events none

      select
        padding-right 30px
        border 0
        -webkit-appearance none
        appearance none

        &:focus
          outline 0

  .facets__footer
    text-align center
    margin-top: auto;

    .link
      margin-bottom 1em

    .cta
      width 100%
.facets-container
  display flex
  justify-content space-between
  align-items center
  margin-bottom 72px

.facets__wrapper
  display block
  text-align right

  &[open]
    .facets__close
      display block
    .facets
      pointer-events all
    .facets-form
      opacity 1


.facets__toggle
  text-align right

  &::marker
    content ''


.facets__open
  svg
    width 30px

.facets__close
  display none
  position fixed
  top 40px
  right 48px
  z-index 11
  cursor pointer
  transition rotate 0.2s ease-in

  &:hover
    rotate 90deg

  svg
    width 25px


// filters container
.facets
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 10
  padding 20px 32px
  background-color rgba($black, 0.75)
  backdrop-filter blur(5px)

.facets__header
  padding-right 10px

.facets-form
  background-color $white
  width calc(100% - 5rem)
  margin-left auto
  height 100%
  overflow-y auto
  pointer-events all
  transition opacity 0.2s ease
  max-width 400px
  display flex
  flex-direction column
  border-radius 8px
  padding 32px
  text-align left
  opacity 0

  .facets__group
    padding 20px 0

    &:not(:last-of-type)
      border-bottom 1px solid $gray3

    +mq(768)
      padding 32px 0

    .text
      color $gray
      margin-bottom 1em

      p
        margin-bottom 0


  .facets__list
    list-style none

    .facets__item
      &:not(&:last-child)
        margin-bottom 16px

      label
        display flex
        align-items center

      .facets__checkbox
        margin-right 8px
        width 30px
        height @width
        background-color $white
        border 1px solid $black
        border-radius 5px
        accent-color $black


  .facets__price
    display flex
    align-items center

    .field
      position relative
      margin-right 24px
      width 50%
      height 55px
      border-radius 5px
      overflow hidden
      border 1px solid $black

      &:last-child
        margin-right 0

    .field__currency
      display block
      color $gray
      position absolute
      top 57%
      left 12px
      translate 0 -50%
      pointer-events none
      z-index 1
      font('body', 400)

    .field__label
      position absolute
      top 3px
      left 12px
      font-size 0.75em
      color $gray
      pointer-events none

    .field__input
      padding-left 25px
      width 100%
      height 75%
      border 0
      translate 0 30%
      font('headline', 400)

      &:focus
        outline 0



  .facets__summary
    .facets__sort
      label
        display block
        margin-bottom 0.5em

    .select
      position relative
      display inline-flex
      height 57px
      padding 12px
      border 1px solid $black
      align-items center
      width 100%
      border-radius 5px

      svg
        position absolute
        right 10px
        width 20px
        margin-left 10px
        pointer-events none

      select
        padding-right 30px
        border 0
        -webkit-appearance none
        appearance none

        &:focus
          outline 0

  .facets__footer
    text-align center
    margin-top auto

    .cta
      width 100%
      margin-bottom 1em
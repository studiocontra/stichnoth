.card-product
  container card-product / inline-size

  &:hover
    .card-product__media
      .hover-img
        opacity 1

  a
    color $black


.card-product__media
  position relative
  margin-bottom 1em
  aspect-ratio 1 / 1.45

  svg
  img
    border-radius 8px
    fullAbs()
    fit()

  .hover-img
    opacity 0
    transition opacity 0.15s ease-out

  .card__badge
    position absolute
    top 1.1em
    right @top
    border-radius 5px
    padding 5px 7px
    color $white
    font-size 12px
    text-transform uppercase
    font('headline', 300)

  .card__badge--black
    background-color $black

  .card__badge--gold
    background-color $gold

  &.no-image
    background-color $white2



.card-product__content
  display flex
  flex-direction column

  .title
  .wrap-price
    flex 1 1 100%

  .wrap-price
    font-size 18px
    letter-spacing 0.1rem
    line-height 1.2
    color $gray

    .price
      text-align left

    .price-item
      display inline-block


  .price--regular
    display block


  .price--sale
    display none


  .wrap-price--on-sale
    .price--regular
      display none

    .price--sale
      display block

    .price-item--last
      color $gold
      margin-bottom 0.1em

    .price-item--regular
      display block
      color $gray
      font-size 0.85em
      text-decoration line-through


/**
* Container Queries
*/
// 576px viweport
@container card-product (min-width: 300px)
  .card-product__content
    flex-wrap nowrap
    flex-direction row

    .title
      flex 1 1 auto

    .wrap-price
      flex 0 0 135px

      .price
        text-align right

.search-modal
  position absolute
  top 100%
  left 0
  width 100%
  background-color $white
  padding-bottom 16px


.search-modal__form
  display block
  position relative
  width 100%

  .search
    position relative

    .form__input
      display flex
      align-items center
      flex 0 1 auto

  input
    width 100%
    margin-right 1em
    height 60px
    border 0
    border-bottom 1px solid $white
    font-size 24px
    text-transform uppercase
    font('headline', 400)

    /* clears the 'X' */
    &::-webkit-search-decoration,
    &::-webkit-search-cancel-button,
    &::-webkit-search-results-button,
    &::-webkit-search-results-decoration
      display none

    &:focus
      outline 0
      border-color $black

  .reset__button
    width auto
    appearance none
    background none
    border 0
    flex 0 0 30px
    cursor pointer

    svg
      width 30px
      height @width


  .predictive-search
    height 0
    overflow hidden


.predictive-search__loading-state
  width 30px
  display none

  svg
    stroke $black


.search-results__header
  margin-bottom 2em
  display flex
  justify-content space-between
  align-items center

  .text
    margin-bottom 0
    color $black


.search-results__items
  display flex
  padding-bottom 2em
  overflow auto
  gap 0 20px

  &::-webkit-scrollbar
    height 0.5em

  &::-webkit-scrollbar-track
    box-shadow inset 0 0 6px rgba($gold, 0.3)
    border-radius 10px

  &::-webkit-scrollbar-thumb
    background-color $black
    outline 0
    border-radius 10px


  .card-product
    flex 0 0 210px



/* Statuses */
.search-modal__form[loading]
  .predictive-search__loading-state
    display block


.search-modal__form[results]
  input
    border-color $black

  .predictive-search
    height auto
    padding-top 2em

.search-modal
  position absolute
  top 100%
  left 0
  width 100%
  background-color $white
  padding-bottom 16px

.search-modal__form
  display block
  width 100%

  .search
    position relative

  input
    width 100%
    padding-right 80px
    height 60px
    border 0
    border-bottom 1px solid $white
    font-size 24px
    text-transform uppercase
    font('headline', 400)

    /* clears the 'X' */
    &::-webkit-search-decoration,
    &::-webkit-search-cancel-button,
    &::-webkit-search-results-button,
    &::-webkit-search-results-decoration
      display none

    &:focus
      outline 0
      border-color $black

  .reset__button
    position absolute
    top 15px
    right 0
    width auto
    appearance none
    background none
    border 0

    svg
      width 30px
      height @width
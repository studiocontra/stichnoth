.search-modal
  position absolute
  top 100%
  left 0
  width 100%
  background-color $white
  padding-bottom 16px


.search-modal__form
  display block
  position relative
  width 100%

  .search
    position relative

    .form__input
      display flex
      align-items center
      flex 0 1 auto

  input
    width 100%
    padding-right 80px
    height 60px
    border 0
    border-bottom 1px solid $white
    font-size 24px
    text-transform uppercase
    font('headline', 400)

    /* clears the 'X' */
    &::-webkit-search-decoration,
    &::-webkit-search-cancel-button,
    &::-webkit-search-results-button,
    &::-webkit-search-results-decoration
      display none

    &:focus
      outline 0
      border-color $black

  .reset__button
    width auto
    appearance none
    background none
    border 0
    flex 0 0 30px

    svg
      width 30px
      height @width


  .predictive-search
    height 0
    overflow hidden


.predictive-search__loading-state
  width 30px
  display none

  svg
    stroke $black


.search-modal__form[loading]
  .predictive-search__loading-state
    display block


.search-modal__form[results]
  input
    border-color $black

  .predictive-search
    height auto
